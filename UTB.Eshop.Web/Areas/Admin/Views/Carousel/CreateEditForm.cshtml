@model CarouselItem

<form asp-action="@ViewBag.Action" method="post" enctype="multipart/form-data">
    @{
        if (ViewBag.Action == "Edit")
        {
            <input type="hidden" asp-for="ID" />
        }
    }
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label>Image</label>
        @{
            if (ViewBag.Action == "Edit")
            {
                <input asp-for="Image" class="form-control-file">
            }
            else
            {
                <input asp-for="Image" class="form-control-file" data-val="true" data-val-required="The Image field is required.">
            }
        }

        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Image Alt</label>
        <input asp-for="ImageAlt" class="form-control" placeholder="Enter Image Alt">
        <span asp-validation-for="ImageAlt"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>